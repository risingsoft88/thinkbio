                            </div>
                            <div class="news__logo">
                                <img
                                    class="lazyload"
                                    src="{{ placeholderImage(item.meta('logo').width / 2, item.meta('logo').height / 2) }}"
                                    data-src="{{ item.meta('logo').src|resizeDynamic(item.meta('logo').width / 2, item.meta('logo').height / 2) }}"
                                    data-srcset="{{ item.meta('logo').src|resizeDynamic(item.meta('logo').width / 2, item.meta('logo').height / 2) }} 1x, {{ item.meta('logo').src|resizeDynamic(item.meta('logo').width, item.meta('logo').height) }} 2x"
                                    data-sizes="auto"
                                    alt="{{ item.meta('logo').alt|e }}"
                                />
                            </div>
                            <div class="news__title">
                                <h2>{{ item.title }}</h2>
                            </div>
                            <div class="news__date">{{ item.meta('date') }}</div>
                        </div>
                    </a>
                    {% if index == 2 %}
                        <div class="news-two__shape-3">
                            <svg width="115" height="231" viewBox="0 0 115 231" fill="none"><path d="M115 114.335L115 0C51.5174 -2.77491e-06 5.3775e-06 51.5173 2.60258e-06 115L115 115L115 114.335Z" fill="#99E3E2"/><path d="M114.335 115L7.62939e-06 115C4.83035e-06 179.035 51.5174 231 115 231L115 115L114.335 115Z" fill="#99E3E2"/></svg>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        {# <div class="news__link">
            <a href="{{ link.url }}">{{ link.title }}</a>
        </div> #}
        <div class="news-two__mobile-shape-2">
            <svg width="86" height="112" viewBox="0 0 86 112" fill="none"><path d="M112 56C81.0867 56 56 30.9133 56 0H0V56C30.9133 56 56 81.0867 56 112H112V56Z" fill="#99E3E2"/></svg>
        </div>
    </div>
</section>